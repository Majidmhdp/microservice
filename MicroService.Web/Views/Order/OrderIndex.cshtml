@{
	var status = Context.Request.Query["status"];

	var approved = "";
	var readyforpickup = "";
	var cancelled = "";
	var all = "";

	switch (status)
	{
		case "approved":
			approved = "active text-white bg-secondary";
			break;
		case "readyforpickup":
			readyforpickup = "active text-white bg-secondary";
			break;
		case "cancelled":
			cancelled = "active text-white bg-secondary";
			break;
		case "all":
			all = "active text-white bg-secondary";
			break;
	}
}



<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3 d-flex justify-content-between">
		<div class="row">
			<h1 class="text-white">Order List</h1>
		</div>
		<ul class="list-group list-group-horizantal-sm pt-2" style="display:block ruby;">
			<a style="text-decoteation:none" asp-controller="Order" asp-action="OrderIndex" asp-route-status="approved">
				<li class="list-group-item @approved">Approved</li>
			</a>
			<a style="text-decoteation:none" asp-controller="Order" asp-action="OrderIndex" asp-route-status="readyforpickup">
				<li class="list-group-item @readyforpickup">Ready for pickup</li>
			</a>
			<a style="text-decoteation:none" asp-controller="Order" asp-action="OrderIndex" asp-route-status="cancelled">
				<li class="list-group-item @cancelled">Cancelled</li>
			</a>
			<a style="text-decoteation:none" asp-controller="Order" asp-action="OrderIndex" asp-route-status="all">
				<li class="list-group-item @all">All</li>
			</a>
		</ul>
	</div>
	<div class="card-body b-4">
		<table id="tblData" class="table table-bordered table-striped pt-3" style="width=100%">
			<thead>
			<tr>
				<td>ID</td>
				<td>Email</td>
				<td>Name</td>
				<td>Phone</td>
				<td>Status</td>
				<td>Total</td>
				<td></td>
			</tr>
			</thead>
		</table>
	</div>
</div>

@section Scripts
{
	<script src="~/js/order.js"></script>
}
